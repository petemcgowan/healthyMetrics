{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2015"]
  },
  "include": [
    "repository-mode",
    "simple"
  ],
  "exclude": [
    "../node_modules",
    "../src",
    "../src/index.ts"
  ]
}